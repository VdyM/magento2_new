<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <referenceBlock name="page.title">
        <action method="setPageTitle">
            <argument name="title" xsi:type="string">PPT</argument>
        </action>
    </referenceBlock>
    <body>
        <referenceBlock name="head.additional">
            <block name="metatags" class="Smartmage\Adminmenu\Block\TagsConf" template="Smartmage_Adminmenu::metatags.phtml"/> 
        </referenceBlock>
        <referenceContainer name="content">
            <block class="Smartmage\Adminmenu\Block\ImageConf" name="nime" template="Smartmage_Adminmenu::displaySystemConfig.phtml"/>
            <!-- <block class = "Smartmage\Adminmenu\Block\Helloworld" name = "some.name" template="Smartmage_Adminmenu::displaySystemConfig.phtml"/> -->
        </referenceContainer>
    </body>
</page>